.unlogin-card {
  display: flex;
  align-items: center;
  margin: 50rpx 27rpx 0;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.unlogin-head {
  flex-shrink: 0;
  margin-left: 53rpx;
  height: 100rpx;
  width: 100rpx;
  background: #eeeeee;
  border-radius: 50%;
}

.unlogin-info {
  flex: 1;
  margin-left: 31rpx;
}

.unlogin-text {
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.unlogin-tips {
  margin-top: 6rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #8B8B8B;
}

.unlogin-btn {
  margin: 34rpx auto 0;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: salmon;
  color: #fff;
  outline: none;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
}

button::after, button:disabled::after {
  border: none;
}

.movie-card {
  width: 100%;
  display:flex;  
  justify-content: center
}

.movie-img {
  width: 270rpx;
  height: 400rpx;
}

.text-card {
  margin: 30rpx;
  background: #fff;
  z-index: -1;
  position: absolute;
  top: 100rpx; 
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
}

.text-tips {
  margin-top: 300rpx;
}

.movie-title {
  padding: 50rpx;
  text-align: center;
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}

.movie-description {
  padding: 50rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #34373d;
  padding-bottom: 200rpx;
  /* height: rpx; */
}

.options {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  padding: 0 60rpx;
  background: snow;
}

.check-comment,
.add-comment {
  flex: 1;
  border: 1rpx groove moccasin;
  border-radius: 13rpx;
  display: flex;
  align-items: center;
  padding: 3%;
}

.comment-text {
  text-align: center;
  line-height: 100rpx;
}

.comment-img {
  width: 80rpx;
  height: 80rpx;
}

.check-comment {
  margin-right: 40rpx;
}

.info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 100rpx;
  margin: 30rpx;
}

.image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.title {
  font-size: 50rpx;
  line-height: 70rpx;
  font-weight: bold;
  color: moccasin;
  margin-left: 30rpx;
}

.comment {
   height: 120rpx; 
}

.text-comment {
  font-size: 35rpx;
  line-height: 50rpx;
  color: rebeccapurple;
  margin: 10rpx 30rpx
}

.audio-comment {
  margin: 20rpx 40rpx 20rpx 80rpx;
  background: lavenderblush;
  height: 80rpx;
  border-radius: 13rpx;
  align-items: center;
}

.play-audio {
  width: 80rpx;
  height: 80rpx;
  padding: 0 40rpx;
}
