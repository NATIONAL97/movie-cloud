page {
  background: #f9f9f9;
}

.movie-card {
  width: 100%;
  display:flex;  
  justify-content: center
}

.movie-img {
  width: 270rpx;
  height: 400rpx;
}

.text-card {
  margin: 30rpx;
  background: #fff;
  z-index: -1;
  position: absolute;
  top: 100rpx; 
  bottom: 0;
  left: 20rpx;
  right: 20rpx;
}

.text-tips {
  margin-top: 300rpx;
}

.movie-title {
  padding: 50rpx;
  text-align: center;
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}

.movie-description {
  padding: 50rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #34373d;
  padding-bottom: 200rpx;
  /* height: rpx; */
}

.options {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  padding: 0 60rpx;
  background: snow;
}

.check-comment,
.add-comment {
  flex: 1;
  border: 1rpx groove moccasin;
  border-radius: 13rpx;
  display: flex;
  align-items: center;
  padding: 3%;
}

.comment-text {
  text-align: center;
  line-height: 100rpx;
}

.comment-img {
  width: 80rpx;
  height: 80rpx;
}

.check-comment {
  margin-right: 40rpx;
}