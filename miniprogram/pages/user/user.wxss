page {
  background: lightblue
}

.title {
  font-size: 30rpx;
  line-height: 42rpx;
  padding-top: 100rpx;
  text-align: center;
  color: #34373d;
  opacity: 0.6;
}

.unstar {
display:flex;                   
justify-content: center; 
align-items: center;
height: 1000rpx; 
}

.unstar-img {
  width: 200rpx;
  height: 200rpx;
}

.unstar-text {
  text-align: center;
  font-weight: bold;
  padding-top: 100rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}

.back {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: moccasin;
  font-size: 40rpx;
  line-height: 100rpx;
  font-weight: bold;
  text-align: center;
}

.star-card {
  margin: 50rpx;
  display: flex;
  align-items: center;
  height: 400rpx; 
  background: #fff;
  box-shadow: 2rpx 13rpx 0 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}


.star-img {
  width: 270rpx;
  height: 400rpx;
  flex-shrink: 0;
  border-radius: 13rpx;
}

.star-tips {
  flex: 1;
  margin-left: 20rpx;
}

.star-movie-title {
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}

.info {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 100rpx;
  margin: 30rpx;
}

.image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.title {
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: bold;
  color: moccasin;
  margin-left: 20rpx;
}

.star-title {
  text-align: center;
  margin: 50rpx;
  color: snow
