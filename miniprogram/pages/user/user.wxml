      <view class="unlogin-tips">点击微信即可侃侃电影</view>
    </view>
  </view>
   <button open-type="getUserInfo"  bindgetuserinfo="onGetUserInfo" class="unlogin-btn" style="background-image: url({{avatarUrl}})"
